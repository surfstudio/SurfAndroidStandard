<resources>

    <!-- светлая тема -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/colorWindowBackgroundLight</item>
        <item name="android:colorBackground">@color/colorWindowBackgroundLight</item>

        <item name="android:textViewStyle">@style/Text</item>
        <item name="cardViewStyle">@style/CardView</item>
    </style>

    <!-- темная тема -->
    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/colorWindowBackgroundDark</item>
        <item name="android:colorBackground">@color/colorWindowBackgroundDark</item>

        <item name="android:textViewStyle">@style/Text</item>
        <item name="cardViewStyle">@style/CardView</item>
    </style>

    <style name="Theme.Transparent" parent="Theme.AppCompat.Translucent">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>
