<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageloader_sample_svg_iv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="0.5"
        android:background="@color/colorPrimary"
        android:contentDescription="@string/content_description"
        android:padding="16dp"
        tools:src="@drawable/a123321" />

    <ImageView
        android:id="@+id/imageloader_sample_lambdas_iv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="0.5"
        android:background="@color/colorPrimary"
        android:contentDescription="@string/content_description"
        android:padding="16dp"
        tools:src="@drawable/a123321" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5">

        <ImageView
            android:id="@+id/imageloader_sample_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/content_description"
            android:src="@drawable/a123321" />

        <Button
            android:id="@+id/image_loader_sample_btn"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_margin="32dp"
            android:text="@string/app_name" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5">

        <ImageView
            android:id="@+id/imageloader_sample_gif_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/colorPrimary"
            android:contentDescription="@string/content_description"
            android:padding="16dp"
            tools:src="@drawable/a123321" />

        <Button
            android:id="@+id/image_loader_sample_gif_btn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="bottom|start"
            android:layout_margin="32dp"
            android:text="@string/gif_button" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5">

        <ImageView
            android:id="@+id/imageloader_video_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/content_description"
            android:src="@drawable/a123321" />
    </FrameLayout>
</LinearLayout>