<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/default_margin">

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/enter_pin_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/enter_pin_btn"
            android:inputType="numberPassword"
            tools:ignore="LabelFor" />

        <Button
            android:id="@+id/enter_pin_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="@dimen/default_margin"
            android:text="@string/submit_pin_btn_text" />

        <Button
            android:id="@+id/get_api_key_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/enter_pin_et"
            android:text="@string/get_apikey_by_pin_btn" />
    </RelativeLayout>

</RelativeLayout>