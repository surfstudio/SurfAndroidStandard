<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/search_request_close_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:text="Close"
        android:layout_height="48dp"/>

    <EditText
        android:id="@+id/search_request_input_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="Type something"
        app:layout_constraintTop_toBottomOf="@id/search_request_close_btn"/>

    <Button
        android:id="@+id/search_request_results_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="go to results"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>