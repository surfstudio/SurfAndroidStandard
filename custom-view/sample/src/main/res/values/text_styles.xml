<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Text" parent="TextAppearance.AppCompat" />

    <style name="Text.Dark">
        <item name="android:textColor">@color/titleColor</item>
    </style>

    <style name="Text.Dark.16">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Dark.24">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Text.Light">
        <item name="android:textColor">@color/subtitleColor</item>
    </style>

    <style name="Text.Light.12">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.White.16">
        <item name="android:textSize">16sp</item>
