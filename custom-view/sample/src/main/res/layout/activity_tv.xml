<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ru.surfstudio.android.custom.view.TitleSubtitleView
            android:id="@+id/first_tsv"
            style="@style/SampleTitleSubtitleViewStyle" />

        <ru.surfstudio.android.custom.view.TitleSubtitleView
            android:id="@+id/second_tsv"
            style="@style/SampleTitleSubtitleViewStyle"
            app:titleDrawableStart="@drawable/ic_brightness_7_red_24dp"
            app:titleGravity="center_vertical" />

        <ru.surfstudio.android.custom.view.TitleSubtitleView
            android:id="@+id/third_tsv"
            style="@style/SampleTitleSubtitleViewStyle"
            app:subTitleDrawableStart="@drawable/ic_brightness_7_red_24dp" />

    </LinearLayout>
</ScrollView>