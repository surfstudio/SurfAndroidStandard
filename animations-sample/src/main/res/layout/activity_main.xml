<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_margin"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/animation_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cross_fade_animation" />

            <Button
                android:id="@+id/showCrossFadeAnimationBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:text="@string/show_animation_btn_text"
                tools:ignore="RelativeOverlap" />

            <Button
                android:id="@+id/resetCrossFadeAnimationBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/showCrossFadeAnimationBtn"
                android:text="@string/reset_animation_btn_text" />

            <ImageView
                android:id="@+id/first_iv"
                android:layout_width="@dimen/image_size"
                android:layout_height="@dimen/image_size"
                android:layout_marginTop="@dimen/default_margin"
                android:contentDescription="@string/image_view"
                android:background="@color/colorAccent"
                android:layout_below="@id/animation_name_tv" />

            <ImageView
                android:id="@+id/second_iv"
                android:layout_width="@dimen/image_size"
                android:layout_height="@dimen/image_size"
                android:layout_toEndOf="@id/first_iv"
                android:layout_marginTop="@dimen/default_margin"
                android:contentDescription="@string/image_view"
                android:background="@color/colorPrimary"
                android:layout_below="@id/animation_name_tv" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>